                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="4dp"
                    android:text="৫.দুই সিজদার মাঝখানে সোজা হয়ে বসা"
                    android:textColor="@color/purple_500"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="4dp"
                    android:text="৬.দরমিয়ানি বৈঠক অর্থাৎ দুইয়ের অধিক রাকাত নামাজের ক্ষেত্রে দুই রাকাত পরে আত্তাহিয়াতু’র জন্য বসা।"
                    android:textColor="@color/purple_500"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:text="৭.উভয় বৈঠকে আত্তাহিয়াতু পড়া।"
                    android:textColor="@color/purple_500"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="4dp"
                    android:text="৮.ঈমামের জন্য কিরআত আস্তে’র জায়গায় আস্তে এবং জোরে’র জায়গায় জোড়ে পড়া।"

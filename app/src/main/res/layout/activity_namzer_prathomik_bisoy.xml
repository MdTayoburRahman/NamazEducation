<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".NamazShikkha.NamzerPrathomikBisoyActivity">
   
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        app:title="নামাজের প্রাথমিক বিষয়"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="بِسْمِ اللّهِ الرَّحْمـَنِ الرَّحِيمِ "
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="বিসমিল্লাহির রাহমানির রাহীম ।"
                android:textColor="#000000"
                android:textSize="17dp" />


            <LinearLayout
                style="@style/bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="নামাজ"
                    android:textColor="@color/purple_500"
                    android:textSize="19dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="4dp"
                    android:padding="5dp"
                    android:text="নামাজ বা সালাত হল ইসলাম ধর্মের প্রধান উপাসনাকর্ম।\n(নির্দিষ্ট নামাজের নির্দিষ্ট সময়)নামাজ আদায় করা প্রত্যেক মুসলমানের জন্য আবশ্যক বা ফরজ।\nনামাজ ইসলামের পঞ্চস্তম্ভের একটি। শাহাদাহ্‌ বা বিশ্বাসের পর নামাযই ইসলামের সবচেয়ে গুরুত্বপূর্ণ স্তম্ভ।\nনামায শব্দটি ফার্সি ভাষা থেকে উদ্ভূত (ফার্সি: نماز) \nএবং বাংলা ভাষায় পরিগৃহীত একটি শব্দ যা আরবি ভাষার সালাত শব্দের (আরবি: صلاة‎, কুরআনিক আরবি: صلوة,) প্রতিশব্দ। \nবাংলা ভাষায় &apos;সালাত&apos;-এর পরিবর্তে সচরাচর &apos;নামাজ&apos; শব্দটিই ব্যবহৃত হয়। ফার্সি, উর্দু, হিন্দি, তুর্কী এবং বাংলা ভাষায় একে নামাজ (ফার্সি ভাষা থেকে উদ্ভূত) বলা হয়। কিন্তু এর মূল আরবি নাম সালাত (একবচন) বা সালাহ্‌ (বহুবচন)।  সালাত -এর আভিধানিক অর্থ দোয়া, রহমত, ক্ষমা প্রার্থনা করা ইত্যাদি। পারিভাষিক অর্থ:‘শরী-আত নির্দেশিত ক্রিয়া-পদ্ধতির মাধ্যমে আল্লাহর নিকটে বান্দার ক্ষমা ভিক্ষা ও প্রার্থনা নিবেদনের শ্রেষ্ঠতম ইবাদতকে ‘সালাত’ বলা হয়, যা তাকবীরে তাহরীমা দ্বারা শুরু হয় ও সালাম দ্বারা শেষ হয়’।"
                    android:textColor="@color/purple_500"
                    android:textSize="17dp" />

                <TextView
